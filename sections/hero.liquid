{%- style -%}
  #shopify-section-{{ section.id }} {
    position: relative;
    overflow: hidden;
  }

  .hero-{{ section.id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ section.settings.hero_height }}vh;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  .hero-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .hero-{{ section.id }} .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-{{ section.id }} .hero-content {
    position: relative;
    z-index: 2;
    text-align: {{ section.settings.text_alignment }};
    padding: 40px 20px;
    max-width: {{ section.settings.content_max_width }}px;
    margin: 0 auto;
    width: 100%;
  }

  .hero-{{ section.id }} .hero-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0 0 20px;
    line-height: 1.2;
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }

  .hero-{{ section.id }} .hero-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    margin: 0 0 30px;
    line-height: 1.6;
    opacity: 0.9;
  }

  .hero-{{ section.id }} .hero-buttons {
    display: flex;
    gap: 15px;
    justify-content: {{ section.settings.text_alignment }};
    flex-wrap: wrap;
  }

  .hero-{{ section.id }} .hero-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    text-decoration: none;
    font-weight: 600;
    font-size: {{ section.settings.button_font_size }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
  }

  .hero-{{ section.id }} .hero-button--primary {
    background-color: {{ section.settings.button_primary_bg }};
    color: {{ section.settings.button_primary_text_color }};
    border: 2px solid {{ section.settings.button_primary_bg }};
  }

  .hero-{{ section.id }} .hero-button--primary:hover {
    background-color: {{ section.settings.button_primary_bg_hover }};
    border-color: {{ section.settings.button_primary_bg_hover }};
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }


  @media screen and (max-width: 768px) {
    .hero-{{ section.id }} .hero-heading {
      font-size: {{ section.settings.heading_size | times: 0.7 | round }}px;
    }

    .hero-{{ section.id }} .hero-subheading {
      font-size: {{ section.settings.subheading_size | times: 0.85 | round }}px;
    }

    .hero-{{ section.id }} .hero-buttons {
      justify-content: center;
    }

    .hero-{{ section.id }} .hero-content {
      text-align: center;
    }

    .hero-{{ section.id }} {
      min-height: {{ section.settings.hero_height_mobile }}vh;
    }
  }

  @media screen and (max-width: 480px) {
    .hero-{{ section.id }} .hero-button {
      width: 100%;
      text-align: center;
    }
  }
{%- endstyle -%}

<section class="hero-{{ section.id }}" data-section-id="{{ section.id }}">
  {%- if section.settings.background_image != blank -%}
    <img 
      class="hero-background" 
      src="{{ section.settings.background_image | image_url: width: 1920 }}"
      srcset="{{ section.settings.background_image | image_url: width: 480 }} 480w,
              {{ section.settings.background_image | image_url: width: 768 }} 768w,
              {{ section.settings.background_image | image_url: width: 1024 }} 1024w,
              {{ section.settings.background_image | image_url: width: 1440 }} 1440w,
              {{ section.settings.background_image | image_url: width: 1920 }} 1920w"
      sizes="100vw"
      alt="{{ section.settings.background_image.alt | escape }}"
      loading="lazy"
    >
  {%- elsif section.settings.background_video != blank -%}
    <video 
      class="hero-background" 
      autoplay 
      muted 
      loop 
      playsinline
      poster="{{ section.settings.video_poster | image_url: width: 1920 }}"
    >
      <source src="{{ section.settings.background_video }}" type="video/mp4">
    </video>
  {%- endif -%}

  <div class="hero-content">
    {%- if section.settings.heading != blank -%}
      <h1 class="hero-heading">{{ section.settings.heading }}</h1>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="hero-subheading">{{ section.settings.subheading }}</p>
    {%- endif -%}

    {%- if section.settings.button_primary_text != blank -%}
      <div class="hero-buttons">
        {%- if section.settings.button_primary_text != blank -%}
          <a href="{{ section.settings.button_primary_link }}" class="hero-button hero-button--primary">
            {{ section.settings.button_primary_text }}
          </a>
        {%- endif -%}

      </div>
    {%- endif -%}
  </div>
</section>

